// Program to swap the first and last digit of a number.

#include <stdio.h>
#include <math.h>

int main() {
    int num, digits = 0, firstDigit, lastDigit, middle, swapped;
    
    printf("Enter a number: ");
    scanf("%d", &num);

    lastDigit = num % 10;

    // Count number of digits
    int temp = num;
    while (temp != 0) {
        digits++;
        temp /= 10;
    }

    firstDigit = num / pow(10, digits - 1);
    middle = num % (int)pow(10, digits - 1);
    middle = middle / 10;

    swapped = lastDigit * pow(10, digits - 1) + middle * 10 + firstDigit;

    printf("Number after swapping first and last digit = %d\n", swapped);

    return 0;
}
