// Program to find the 1's complement of a binary number and print it.

#include <stdio.h>

int main() {
    long long binary;
    int remainder, onesComplement = 0, place = 1;
    long long temp;

    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    temp = binary;

    // Check for valid binary number
    while (temp != 0) {
        remainder = temp % 10;
        if (remainder != 0 && remainder != 1) {
            printf("Invalid binary number!\n");
            return 0;
        }
        temp /= 10;
    }

    temp = binary;

    // Calculate 1's complement
    while (temp != 0) {
        remainder = temp % 10;
        remainder = (remainder == 0) ? 1 : 0;
        onesComplement += remainder * place;
        place *= 10;
        temp /= 10;
    }

    printf("1's complement of %lld is %d\n", binary, onesComplement);

    return 0;
}
